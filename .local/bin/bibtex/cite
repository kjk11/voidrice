#!/bin/bash
# Generate citation from key
cd $HOME/Documents/bib
author="$(extract_field "author" $1)"
date="$(extract_field "date" $1)"
[ -z $date ] && date="$(extract_field "year" "$1")"
title="$(extract_field "title" $1)"
publisher="$(extract_field "publisher" "$1")"
key=$(echo $1 | sed -e 's/\.bib//g')
echo "$author ; $date ; $title ; $publisher ; {$key}"
